<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmzd.ghazal.kotlinmvvmonlineshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".repository.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinMvvmOnlineShop"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.OrderActivity"></activity>
        <activity android:name=".view.AddressActivity" />
        <activity android:name=".view.CartActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.ProfileActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.DetailsActivity" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>