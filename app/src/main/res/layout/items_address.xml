<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.jmzd.ghazal.kotlinmvvmonlineshop.model.DataModel_Address" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg">
    <androidx.cardview.widget.CardView
        android:layout_margin="15dp"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Tv_id_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran"
                android:textSize="16dp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:lineSpacingExtra="8dp"
                android:text="نام شهر   : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/Tv_id_order"
                android:fontFamily="@font/iran"
                android:textSize="16dp"
                android:padding="10dp"
                android:lineSpacingExtra="8dp"
                android:text="@{data.city}"/>
            <TextView
                android:id="@+id/Tv_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/Im_post"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="شماره تلفن :"
                android:padding="10dp"
                android:layout_below="@+id/Tv_id_order"
                android:fontFamily="@font/iran" />

            <TextView
                android:id="@+id/Tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/Tv_price_title"
                android:layout_marginTop="20dp"
                android:textColor="#2ECC71"
                android:padding="10dp"
                android:text="@{data.phone}"
                android:textAlignment="center"
                android:layout_below="@+id/Tv_id_order"
                android:fontFamily="@font/iran" />


            <TextView
                android:id="@+id/Tv_title_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="آدرس :"
                android:padding="10dp"
                android:layout_below="@+id/Tv_price_title"
                android:fontFamily="@font/iran" />

            <TextView
                android:id="@+id/Tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/Tv_price_title"
                android:layout_marginTop="20dp"
                android:textColor="#2ECC71"
                android:padding="10dp"
                android:text="@{data.address}"
                android:textAlignment="center"
                android:layout_below="@+id/Tv_price"
                android:fontFamily="@font/iran" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
